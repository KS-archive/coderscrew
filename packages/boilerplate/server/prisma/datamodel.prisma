type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String
  githubId: String @unique
  googleId: String @unique
  facebookId: String @unique
  posts: [Post!]!
}

type Post {
  id: ID! @id
  title: String!
  content: String
  published: Boolean! @default(value: false)
  author: User
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
